<div class="post">
  <h3><%= post.title %></h3>
  <p><%= post.content %></p>
  <small><%= time_ago_in_words(post.created_at) %> ago</small>

  <div class="actions">
    <%= link_to "View", post_path(post) %>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Delete", post_path(post),
     data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

  </div>
</div>
