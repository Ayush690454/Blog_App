<h1>Edit Blog</h1>

<div id="form">
  <%= form_with model: @post do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </p>

    <%= f.submit "Update Post" %>
  <% end %>
</div>

